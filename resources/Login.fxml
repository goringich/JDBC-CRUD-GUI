<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" alignment="CENTER" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="application.LoginController">
  <padding>
    <Insets top="20" right="20" bottom="20" left="20"/>
  </padding>
  <Label text="Вход в систему"/>
  <TextField fx:id="usernameField" promptText="Имя пользователя"/>
  <PasswordField fx:id="passwordField" promptText="Пароль"/>
  <HBox spacing="10">
    <Button text="Войти" onAction="#handleLogin"/>
    <Button text="Войти без авторизации" onAction="#handleBypassLogin"/>
  </HBox>
</VBox>
